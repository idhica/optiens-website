---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '~/styles/global.css'; // ルートエイリアスを使用してインポート


export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AIテクノロジーと自然の調和を通じて、人々と地球が共に豊かになる未来を追求するオプティエンスの公式ウェブサイトです。' } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/optiens-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <link rel="icon" href="/images/optiens-logo.png" />
    <link rel="apple-touch-icon" href="/images/optiens-logo.png" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  /*
    ★重要★
    この <style is:global> ブロックは空にしてください。
    すべてのグローバルスタイルは 'src/styles/global.css' に移動済みです。
    Layoutコンポーネント自体に固有のグローバルスタイルがなければ、ここにCSSは不要です。
  */
</style>