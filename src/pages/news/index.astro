---
import Layout from '../../layouts/Layout.astro';
import { createClient } from 'microcms-js-sdk';
import { format } from 'date-fns';
import { stripHtmlTags } from '../../utils/string';
import type { News, MicroCMSListResponse } from '../../types/microcms.d.ts';

// microCMSクライアントの初期化
const client = createClient({
  serviceDomain: import.meta.env.MICROCMS_SERVICE_DOMAIN,
  apiKey: import.meta.env.MICROCMS_API_KEY,
});

// `microcms-js-sdk`からのレスポンスに型を付与
const { contents: newsList } = await client.get<MicroCMSListResponse<News>>({
  endpoint: 'news',
  queries: { orders: '-publishedAt' }
});
---
<Layout title="最新情報 | オプティエンス">
  <main>
    <section class="news-list-hero-section">
      <div class="container text-center">
        <h1>お知らせ一覧</h1>
        <p>オプティエンスからのお知らせです。</p>
      </div>
    </section>

    <section class="news-articles-section">
      <div class="container">
        {newsList && newsList.length > 0 ? (
          <div class="news-list-container">
            {newsList.map((news) => (
              <article class="news-item-long">
                {news.thumbnail && (
                  <a href={`/news/${news.slug}`} class="news-thumbnail-link">
                    <img src={news.thumbnail.url} alt={news.title} class="news-thumbnail-long" />
                  </a>
                )}
                <div class="news-content-long">
                  <p class="news-date">{format(new Date(news.publishedAt), 'yyyy.MM.dd')}</p>
                  <h2 class="news-title-long"><a href={`/news/${news.slug}`}>{news.title}</a></h2>
                  <p class="news-body-long">{stripHtmlTags(news.body).slice(0, 100)}...</p>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <p class="text-center">現在、お知らせはありません。</p>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  .news-list-hero-section {
    background-color: #f0f0f0;
    padding: 60px 0;
    text-align: center;
  }
  .news-list-hero-section h1 {
    font-size: 2.2em;
    color: #2c3e50;
    margin-bottom: 10px;
  }
  .news-list-hero-section p {
    font-size: 1.1em;
    color: #555;
  }
  .news-articles-section {
    padding: 60px 0;
  }
  .news-list-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .news-item-long {
    display: flex;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .news-item-long:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }
  .news-thumbnail-link {
    flex-shrink: 0;
    width: 250px;
    height: 150px;
    display: block;
  }
  .news-thumbnail-long {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .news-content-long {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .news-date {
    font-size: 0.9em;
    color: #7f8c8d;
    margin-bottom: 5px;
  }
  .news-title-long {
    font-size: 1.5em;
    font-weight: bold;
    margin-top: 0;
    margin-bottom: 10px;
  }
  .news-title-long a {
    color: var(--heading-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .news-title-long a:hover {
    color: var(--primary-color);
  }
  .news-body-long {
    font-size: 1em;
    color: var(--text-color);
    line-height: 1.6;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .news-item-long {
      flex-direction: column;
    }
    .news-thumbnail-link {
      width: 100%;
      height: 200px;
    }
    .news-content-long {
      padding: 15px;
    }
    .news-title-long {
      font-size: 1.2em;
    }
  }
</style>