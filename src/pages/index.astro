---
import Layout from '../layouts/Layout.astro';
import { createClient } from 'microcms-js-sdk';
import type { MicroCMSListResponse, PageContent } from '../types/microcms.d.ts';

const client = createClient({
  serviceDomain: import.meta.env.MICROCMS_SERVICE_DOMAIN,
  apiKey: import.meta.env.MICROCMS_API_KEY,
});

const pageResponse = await client.get<MicroCMSListResponse<PageContent>>({
  endpoint: 'pages',
  queries: { filters: 'slug[equals]home' }
});
const homePageContent: PageContent | null = pageResponse.contents[0] || null;

---

<Layout title="Optiens | 人と地球が共に豊かになる未来を追求" description="テクノロジーと自然の調和を通じて、人々と地球が共に豊かになる未来を追求するOptiensの公式ウェブサイトです。">
  <main>
    <section class="hero-container">
      <div class="hero-content">
        <p class="hero-lead">人と地球が共に豊かになる未来を追求</p>
      </div>
    </section>
  </main>
</Layout>

<style>
.hero-container {
  position: relative;
  width: 100%;
  padding: 80px 20px;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-image: url('/images/ai-nature-city.webp');
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  color: white;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  overflow: hidden;
}
.hero-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 0;
}
.hero-content {
  position: relative;
  z-index: 1;
  text-align: center;
  max-width: 900px;
  padding: 20px;
}
.hero-title {
  font-size: 3.8em;
  font-weight: 800;
  margin-bottom: 0.2em;
  line-height: 1.2;
}
.hero-lead {
  font-size: 1.3em;
  line-height: 1.7;
  margin-bottom: 2em;
}
.hero-cta {
  display: inline-block;
  padding: 12px 30px;
  background-color: var(--primary-color);
  color: white;
  text-decoration: none;
  font-weight: bold;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}
.hero-cta:hover {
  background-color: var(--secondary-color);
}
@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5em;
  }
  .hero-lead {
    font-size: 1.1em;
  }
}
.btn-primary {
  display: inline-block;
  padding: 12px 30px;
  background-color: var(--primary-color);
  color: white;
  text-decoration: none;
  font-weight: bold;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease, color 0.3s ease;
}
.btn-primary:hover {
  background-color: var(--primary-color-darker);
  color: var(--accent-color);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}
:root {
  --primary-color-darker: color-mix(in srgb, var(--primary-color) 80%, black);
  --accent-color: #aaffd6;
}
</style>