---
import Layout from '../layouts/Layout.astro';
import { createClient } from 'microcms-js-sdk';

// renderHtmlContent はもう必要ないので、インポートから削除します。
// import { renderHtmlContent } from '../utils/string'; 

// microCMSクライアントの初期化
const client = createClient({
  serviceDomain: import.meta.env.MICROCMS_SERVICE_DOMAIN,
  apiKey: import.meta.env.MICROCMS_API_KEY,
});

// microCMSから '企業理念' のコンテンツを取得
const response = await client.get({
  endpoint: 'pages',
  queries: { filters: 'slug[equals]corporate-philosophy' }
});
const pageContent = response.contents[0] || null;

// pageContentが取得できなかった場合のフォールバック
if (!pageContent) {
  // 例えば、404ページにリダイレクトするか、エラーメッセージを表示する
  // return Astro.redirect('/404'); // 必要であればコメントアウトを外す
}
---

<Layout title="企業理念 | オプティエンス">
  <main>
    <section class="about-hero-section">
      <video src="/videos/企業理念に基づく動画生成.mp4" autoplay loop muted playsinline></video>
      <div class="hero-content">
        <div class="container text-center">
          <h1>企業理念</h1>
          <p>私たちの指針をご紹介いたします。</p>
        </div>
      </div>
    </section>

    <section class="about-content-section">
      <div class="container">
        {pageContent.body ? (
          <Fragment set:html={pageContent.body} />
        ) : (
          <p>コンテンツが読み込めませんでした。</p>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  /* 共通スタイルは Layout.astro の is:global で管理されています */

  /* ここはcorporate-philosophyページ独自のスタイルを記述します */
  .about-hero-section {
    position: relative;
    overflow: hidden;
    height: auto;
    min-height: 400px;
    color: white;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .about-hero-section video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translateX(-50%) translateY(-50%);
    z-index: -1;
    object-fit: cover;
  }

  .hero-content {
    position: relative;
    padding: 80px 20px;
    text-align: center;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .hero-content h1 {
    font-size: 3em;
    margin-bottom: 15px;
    color: white;
  }

  .hero-content p {
    font-size: 1.2em;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .about-content-section {
    padding: 60px 20px;
    background-color: var(--background-color-light);
    line-height: 1.8;
  }

  .about-content-section h2 {
    font-size: 2.2em;
    color: var(--heading-color);
    margin-top: 40px;
    margin-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 10px;
  }

  .about-content-section h3 {
    font-size: 1.8em;
    color: var(--heading-color);
    margin-top: 30px;
    margin-bottom: 15px;
  }

  .about-content-section p {
    margin-bottom: 20px;
    color: var(--text-color);
  }

  .about-content-section ul {
    list-style: disc;
    margin-left: 25px;
    margin-bottom: 20px;
  }

  .about-content-section li {
    margin-bottom: 10px;
    color: var(--text-color);
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .about-hero-section {
      padding: 60px 20px;
    }
    .hero-content {
      padding: 60px 20px;
    }
    .hero-content h1 {
      font-size: 2.2em;
    }
    .hero-content p {
      font-size: 1em;
    }
    .about-content-section h2 {
      font-size: 1.8em;
    }
    .about-content-section h3 {
      font-size: 1.4em;
    }
  }
</style>